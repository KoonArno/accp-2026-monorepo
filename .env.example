# Database
DATABASE_URL=postgresql://accp_user:accp_password@localhost:5432/accp_db

# Google OAuth2
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REFRESH_TOKEN=your_refresh_token

# Google Drive Folders
GOOGLE_DRIVE_FOLDER_STUDENT_DOCS=your_student_docs_folder_id
GOOGLE_DRIVE_FOLDER_ABSTRACTS=your_abstracts_folder_id

# JWT (Backoffice)
JWT_SECRET=your-super-secret-jwt-key-here

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="ACCP Conference <noreply@accp.com>"

# API URL (for Frontend)
